{
    "workflowApiVersion": "1.1",
    "metaData": {
       "icon": "img/icon.png",
       "category": "custom"
    },
    "type": "DataExtensionUpdate",
    "lang": {
       "en-US": {
           "name": "Push Message",
           "description": "This custom activity allows you to send a push message via Optima."
       }
    },
    "arguments": {
        "execute": {
            "inArguments": [
                {
                    "emailAddress": "{{InteractionDefaults.Email}}"
                },
                {
                    "phoneNumber": "{{Contact.Default.PhoneNumber}}"
                }
            ],
            "outArguments": [
                {
                    "foundSignupDate": ""
                }
            ],
            "url": "https://sfmc-jb-custom-event.herokuapp.com/execute"
        }
    },
    "configurationArguments": {
       "save": {
           "url": "https://sfmc-jb-custom-event.herokuapp.com/save"
       },
       "publish": {
           "url": "https://sfmc-jb-custom-event.herokuapp.com/publish"
       },
       "validate": {
           "url": "https://sfmc-jb-custom-event.herokuapp.com/validate"
       },
       "stop": {
           "url": "https://sfmc-jb-custom-event.herokuapp.com/stop"
       }
    },
    "wizardSteps": [
       { "label": "Step 1", "key": "step1" },
       { "label": "Step 2", "key": "step2" }
    ],
    "userInterfaces": {
       "configModal": {
           "height": 200,
           "width": 300,
           "fullscreen": true
       }
    },
    "schema": {
        "arguments": {
            "execute": {
                "inArguments": [
                    {
                        "phoneNumber": {
                            "dataType": "Phone",
                            "isNullable": false,
                            "direction": "in"   
                        }
                    },
                    {
                        "emailAddress": {
                            "dataType": "Email",
                            "isNullable": false,
                            "direction": "in"
                        }
                    }
                ],
                "outArguments": [
                    {
                        "foundSignupDate": {
                            "dataType": "Date",
                            "direction": "out",
                            "access": "visible"
                        }
                    }
                ]
            }
        }
    }
}